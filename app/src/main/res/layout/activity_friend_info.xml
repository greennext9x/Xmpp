<?xml version="1.0" encoding="utf-8"?>

<com.zhy.autolayout.AutoFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroup_gray"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/themebackgroup"
            android:elevation="@dimen/activity_horizontal_margin">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/im_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_back"/>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:text="好友信息"
                    android:textColor="@color/themebackgroup_white"
                    android:textSize="36px"/>

                <ImageView
                    android:id="@+id/im_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20px"/>
            </com.zhy.autolayout.AutoLinearLayout>

        </android.support.v7.widget.Toolbar>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:background="@color/themebackgroup_white"
            android:padding="20px">

            <ImageView
                android:id="@+id/ivHeader"
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_marginLeft="10px"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_tp"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6px"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvAlias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20px"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/gray0"
                        android:textSize="30px"/>

                    <ImageView
                        android:id="@+id/ivGender"
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:scaleType="fitXY"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:id="@+id/tvAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="坑聊号:"
                    android:textColor="@color/gray2"
                    android:textSize="24px"/>

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:layout_marginTop="40px"
            android:background="@color/themebackgroup_white"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_weight="1"
                android:text="地区"
                android:textColor="@color/themebackgroup_black"
                android:textSize="32px"/>

            <TextView
                android:id="@+id/tvArea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_weight="4"
                android:textColor="@color/gray1"
                android:textSize="32px"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            style="@style/horizontaldivider"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:background="@color/themebackgroup_white"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_weight="1"
                android:text="个性签名"
                android:textColor="@color/themebackgroup_black"
                android:textSize="32px"/>

            <TextView
                android:id="@+id/tvSignature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_weight="4"
                android:textColor="@color/gray1"
                android:textSize="32px"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <Button
            android:id="@+id/btnAddFriend"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginBottom="40px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="40px"
            android:background="@drawable/shape_btn_add"
            android:text="添加到通讯录"
            android:textColor="@color/themebackgroup_white"
            android:textSize="32px"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnDeleteFriend"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginBottom="40px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="40px"
            android:background="@drawable/shape_btn_delete"
            android:text="删除好友"
            android:textColor="@color/themebackgroup_white"
            android:textSize="32px"
            android:visibility="gone"/>

    </com.zhy.autolayout.AutoLinearLayout>
    <!--菜单-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rlMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mask"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/themebackgroup_white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:text="确定删除该好友?"
                android:textColor="@color/themebackgroup_black"
                android:textSize="36px"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:background="@null"
                    android:text="取消"/>

                <Button
                    android:id="@+id/btn_confim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:background="@null"
                    android:text="确定"
                    android:textColor="@color/red1"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoFrameLayout>
