<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroup_gray"
    android:scrollbars="none">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/llMyInfo"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:layout_marginTop="40px"
            android:background="@color/themebackgroup_white"
            android:gravity="center_vertical"
            android:paddingRight="6px">

            <ImageView
                android:id="@+id/ivHeader"
                android:layout_width="130px"
                android:layout_height="130px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_tp"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="130px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6px"
                    android:singleLine="true"
                    android:textColor="@color/gray0"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/tvAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6px"
                    android:singleLine="true"
                    android:textColor="@color/gray2"
                    android:textSize="26px"/>

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.lqr.optionitemview.OptionItemView
            android:id="@+id/oivSetting"
            style="@style/OptionItem"
            android:layout_marginTop="40px"
            android:background="@color/themebackgroup_white"
            android:clickable="true"
            app:left_image_margin_left="40px"
            app:left_image_margin_right="36px"
            app:left_src="@mipmap/ic_setting_blue"
            app:left_text="设置"
            app:left_text_color="@color/themebackgroup_black"
            app:left_text_size="16sp"/>

        <View
            style="@style/horizontaldivider"/>

        <com.lqr.optionitemview.OptionItemView
            android:id="@+id/oivout"
            style="@style/OptionItem"
            android:background="@color/themebackgroup_white"
            android:clickable="true"
            app:left_image_margin_left="40px"
            app:left_image_margin_right="36px"
            app:left_src="@mipmap/ic_setting_blue"
            app:left_text="注销"
            app:left_text_color="@color/themebackgroup_black"
            app:left_text_size="16sp"/>

    </com.zhy.autolayout.AutoLinearLayout>
    >

</ScrollView>