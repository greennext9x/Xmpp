<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="372px"
        android:layout_height="372px"
        android:layout_gravity="center"
        android:background="@drawable/bg_voice_popup"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rc_audio_state_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22px"
            android:layout_marginLeft="82px"
            android:layout_marginRight="82px"
            android:layout_marginTop="40px"/>

        <TextView
            android:id="@+id/rc_audio_timer"
            android:layout_width="210px"
            android:layout_height="210px"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22px"
            android:layout_marginLeft="82px"
            android:layout_marginRight="82px"
            android:layout_marginTop="40px"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="140px"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/rc_audio_state_text"
            android:layout_width="320px"
            android:layout_height="80px"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginBottom="22px"
            android:layout_marginLeft="28px"
            android:layout_marginRight="28px"
            android:layout_marginTop="22px"
            android:background="@drawable/corner_voice_style"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="30px"/>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoFrameLayout>