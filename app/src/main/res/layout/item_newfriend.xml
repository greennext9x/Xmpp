<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:background="@color/themebackgroup_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="28px"
        android:paddingRight="30px"
        >


        <ImageView
            android:id="@+id/ivHeader"
            android:layout_width="110px"
            android:layout_height="110px"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15px"
            android:layout_marginTop="15px"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_tp"/>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:singleLine="true"
                android:text="沧晓"
                android:textColor="@color/gray0"
                android:textSize="32px"/>

            <TextView
                android:id="@+id/tvMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="6px"
                android:singleLine="true"
                android:text="对方请求添加你为朋友"
                android:textColor="@color/gray2"
                android:textSize="24px"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/tvAdded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:gravity="right"
            android:singleLine="true"
            android:text="已添加"
            android:textColor="@color/gray1"
            android:textSize="24px"
            android:visibility="gone"/>


        <Button
            android:id="@+id/btnAck"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="120px"
            android:layout_height="60px"
            android:layout_marginLeft="20px"
            android:background="@drawable/shape_btn_send"
            android:text="接受"
            android:textColor="@color/themebackgroup_white"
            android:textSize="26px"
            android:visibility="gone"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoFrameLayout>